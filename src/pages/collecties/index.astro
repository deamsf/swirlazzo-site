---
import Layout from '../../layouts/Layout.astro';
import { collections } from '../../data/collections';
---

<Layout title="Collecties - Swirlazzo" description="Ontdek onze handgemaakte keramiek collecties - van vaasjes tot schaaltjes en meer.">
  <div class="collections-page">
    <div class="container">
      <h1 class="page-title">Onze Collecties</h1>
      
      <div class="collections-grid">
        {collections.map(collection => (
          <a href={collection.url} class="collection-card">
            <div class="collection-image">
              <img src={collection.image} alt={collection.title} />
            </div>
            <div class="collection-info">
              <div class="collection-icon">{collection.icon}</div>
              <h2 class="collection-title">{collection.title}</h2>
              <span class="collection-link">Bekijk collectie</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </div>
</Layout>

<style>
  .collections-page {
    padding: 120px 0 80px;
  }
  
  .page-title {
    font-size: 3rem;
    color: var(--teal);
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .collections-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }
  
  .collection-card {
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 5 px 15px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .collection-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
  }
  
  .collection-image {
    height: 250px;
    overflow: hidden;
  }
  
  .collection-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  .collection-card:hover .collection-image img {
    transform: scale(1.05);
  }
  
  .collection-info {
    padding: 1.5rem;
    background-color: white;
    text-align: center;
  }
  
  .collection-icon {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }
  
  .collection-title {
    font-size: 1.8rem;
    color: var(--teal);
    margin-bottom: 1rem;
  }
  
  .collection-link {
    display: inline-block;
    color: var(--pink);
    font-weight: 600;
    position: relative;
  }
  
  .collection-link::after {
    content: '';
    position: absolute;
    bottom: -3px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--pink);
    transition: width 0.3s ease;
  }
  
  .collection-card:hover .collection-link::after {
    width: 100%;
  }
  
  @media (max-width: 992px) {
    .collections-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 576px) {
    .collections-page {
      padding: 100px 0 60px;
    }
    
    .page-title {
      font-size: 2.5rem;
      margin-bottom: 2rem;
    }
    
    .collections-grid {
      grid-template-columns: 1fr;
    }
  }
</style>